{
    "languageserver": {
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "ccls": {
    "enable": false,
    "command": "ccls",
    "filetypes": ["c","cpp", "objc", "objcpp"],
    "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
    "initializationOptions": {
      "cache": {
        "directory": "/tmp/ccls"
      }
    }
  }
},
"clangd.path": "/usr/bin/clangd-10"
}
